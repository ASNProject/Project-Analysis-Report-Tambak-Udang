<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="100dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_marginLeft="20dp"
    android:layout_marginRight="20dp"
    android:layout_marginTop="10dp"
    android:layout_marginBottom="10dp"
    android:elevation="10dp"
    app:cardCornerRadius="10dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/colorBackgroung">

        <TextView
            android:id="@+id/stanggalanpanen"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp"
            android:layout_marginRight="10dp"
            android:text="Tanggal"
            android:textColor="@color/colorGray"></TextView>

        <TextView
            android:id="@+id/editpanen"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="10dp"
            android:layout_marginRight="10dp"
            android:layout_toStartOf="@+id/deletepanen"
            android:layout_toLeftOf="@+id/deletepanen"
            android:drawableLeft="@drawable/ic_edit_black_24dp"
            android:text="Edit"
            android:textColor="@color/colorDarkBlue"></TextView>

        <TextView
            android:id="@+id/deletepanen"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="10dp"
            android:layout_marginRight="10dp"
            android:drawableLeft="@drawable/ic_delete_black_24dp"
            android:text="Delete"
            android:textColor="@color/colorDarkBlue"></TextView>

        <HorizontalScrollView
            android:id="@+id/horizontalview"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_below="@+id/stanggalanpanen"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp"
            android:layout_marginRight="10dp">

            <LinearLayout
                android:layout_width="80dp"
                android:layout_height="match_parent">

                <LinearLayout
                    android:layout_width="80dp"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center_horizontal"
                        android:text="DOC Hari"
                        android:textAlignment="center"
                        android:textColor="@color/colorGray"
                        android:textSize="10dp"></TextView>

                    <TextView
                        android:id="@+id/nilaidoc"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5dp"
                        android:gravity="center_horizontal"
                        android:text="Nilai"
                        android:textAlignment="center"
                        android:textColor="@color/colorGray"></TextView>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="80dp"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center_horizontal"
                        android:text="Tonase"
                        android:textAlignment="center"
                        android:textColor="@color/colorGray"
                        android:textSize="10dp"></TextView>

                    <TextView
                        android:id="@+id/nilaitonase"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5dp"
                        android:gravity="center_horizontal"
                        android:text="Nilai"
                        android:textAlignment="center"
                        android:textColor="@color/colorGray"></TextView>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="80dp"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center_horizontal"
                        android:text="ABW"
                        android:textAlignment="center"
                        android:textColor="@color/colorGray"
                        android:textSize="10dp"></TextView>

                    <TextView
                        android:id="@+id/nilaiabw"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5dp"
                        android:gravity="center_horizontal"
                        android:text="Nilai"
                        android:textAlignment="center"
                        android:textColor="@color/colorGray"></TextView>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="80dp"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center_horizontal"
                        android:text="Size"
                        android:textAlignment="center"
                        android:textColor="@color/colorGray"
                        android:textSize="10dp"></TextView>

                    <TextView
                        android:id="@+id/nilaisize"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5dp"
                        android:gravity="center_horizontal"
                        android:text="Nilai"
                        android:textAlignment="center"
                        android:textColor="@color/colorGray"></TextView>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="80dp"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center_horizontal"
                        android:text="Populasi"
                        android:textAlignment="center"
                        android:textColor="@color/colorGray"
                        android:textSize="10dp"></TextView>

                    <TextView
                        android:id="@+id/nilaipopulasi"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5dp"
                        android:gravity="center_horizontal"
                        android:text="Nilai"
                        android:textAlignment="center"
                        android:textColor="@color/colorGray"></TextView>
                </LinearLayout>


            </LinearLayout>

        </HorizontalScrollView>
    </RelativeLayout>

</androidx.cardview.widget.CardView>